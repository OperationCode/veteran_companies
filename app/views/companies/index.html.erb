<%= render partial: 'layouts/main_nav' %>

<div class='container'>
  <table class="table-striped">
    <thead>
      <tr>
        <th><div class="listheading">Company Name</div></th>
        <th><div class="listheading">Organization Affiliation</div>  </th>
      </tr>
    </thead>
    <tbody>
      <%- @companies.published.each do |company| %>
        <tr>
          <td><div class="listsubheading"><%= link_to company.name, company_path(company) %></div></td>
          <td><div class="listsubheadingopp"><%= company.organizations.map(&:name).to_sentence %></div></td>
        </tr>
      <%- end %>
    </tbody>
  </table>
</div>


