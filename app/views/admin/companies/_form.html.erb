<div class="adminsimple-widget-box form-container">
  <div class="widget-title">
    <span class="icon"><i class="icon-align-justify"></i></span>
  </div>
  <div class="widget-content">
    <%= simple_form_for [:admin, resource], html: {class: 'form-horizontal'} do |f| %>
      <div class='form-inputs'>
        <%= f.input :name %>
        <%= f.association :leaders, multiple: true, input_html: {class: 'chosen-select'} %>
        <%= f.association :organizations, multiple: true, input_html: {class: 'chosen-select'} %>
        <%= f.input :url, label: 'Website' %>
        <%= f.input :employees_count, label: '# of Employees' %>
        <%= f.input :total_funding, hint: 'Number in thousands of dollars' %>
        <%= f.input :stage %>
        <%= f.input :year_founded, start_year: Date.today.year - 15,
                                   end_year: Date.today.year,
                                   discard_hour: true, 
                                   discard_day: true, 
                                   discard_month: true %>
        <%= f.input :total_founders %>
        <%= f.input :veteran_founders %>
        <%= f.input :veteran_executives %>
      </div>
      <div class='form-actions'>
        <%= f.button :submit, 'Save' %>
      </div>
    <%- end %>
  </div>
</div>
