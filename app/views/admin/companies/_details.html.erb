<dl class='dl-horizontal'>
  <dt>Name</dt>
  <dd><%= resource.name %></dd>

  <dt>Leaders</dt>
  <dd><%= resource.leaders.map(&:name).to_sentence %></dd>

  <dt>Organizations</dt>
  <dd><%= resource.organizations.map(&:name).to_sentence %></dd>

  <dt>Website</dt>
  <dd><%= resource.url %></dd>

  <dt>Employees</dt>
  <dd><%= resource.employees_count %></dd>

  <dt>Total Funding (in thousands)</dt>
  <dd><%= resource.total_funding %></dd>

  <dt>Stage</dt>
  <dd><%= resource.stage %></dd>

  <dt>Year Founded</dt>
  <dd><%= resource.year_founded.strftime("%Y") %></dd>

  <dt>Total Founders</dt>
  <dd><%= resource.total_founders %></dd>

  <dt>Veteran Founders</dt>
  <dd><%= resource.veteran_founders %></dd>

  <dt>Veteran Executives</dt>
  <dd><%= resource.veteran_executives %></dd>

  <%= button_to 'Publish', publish_admin_company_path(resource), class: 'btn btn-success', method: :put  unless resource.published? %>
  <%= button_to 'Take Offline', take_offline_admin_company_path(resource), class: 'btn btn-success', method: :put  unless resource.pending? %>

</dl>
